@model Course

<div class="container mt-3">
    <div class="card md-3" id="@Model.Id">
        <div class="row">
            <div class="col-md-4"> 
                <img src="~/img/@Model.Image" class="img-fluid rounded-start">
            </div>
            <div class="col-md-8"> 
                <div class="card-body">
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
                        <h3 class="card-title">@Model.Title</h3>
                    </a>
                    <p class="card-text">@Model.Description</p>
                </div>                   
            </div>
        </div>
    </div>
</div>